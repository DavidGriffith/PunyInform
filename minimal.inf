!% -~S

! Library of Horror - a sample game which uses PunyInform

!Constant FULL_DIRECTIONS 1;

Include "globals.h";

Include "puny.h";

Object Library "The Library"
	with
		description "You are in a library.",
	has light;

Object -> Box "box"
	with
		name 'box',
	has container open;


[Initialise;
	location = Library;
	print "^^And so the story begins...^^";
];
