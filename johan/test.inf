Global running;

Verb 'quit'
	* -> Quit;
[QuitSub;
	running = 0;
];

Array raw_input -> 43;
Array parse_array -> 26;

[main i;
	i = 1;
	running = 1;
	raw_input->0 = 40;
	parse_array->0 = 6;
	print"Test^";
	for(: running == 1 :) {
		print ">";
		read raw_input parse_array;
		if(parse_array->1 == 1 && parse_array-->1 == 'quit') {
			running = 0;
		}
		if(running) {
			print "Sorry, I didn't understand that.^";
		}
	}
	print "thanks for playing^";
];

