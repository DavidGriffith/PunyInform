#Ifdef USEINFORM;
Include "Parser";
Include "VerbLib";
#IfNot;
Include "globals.h";
#EndIf;

#Ifndef USEINFORM;
Include "puny.h";
#EndIf;

! Uncomment to add PunyLib extensions
!Include "ext_menu.h";
!Include "ext_flags.h";
!Include "ext_quote_box.h";
!Include "ext_cheap_scenery.h";


#Ifdef USEINFORM;
Include "Grammar";
#Endif;

Object Library "The Library"
	with
	    description "You are in a library.",
	has light;

Object -> John "John"
	with name 'john',
	life [;
	Answer:  print "answer words ", consult_words, " from ", consult_from, "^";
	Ask: print "ask^";
	Order: print "order ", action, ": inv ", ##Inv, " take ", ##Take, "^";
	],
	before [;
	Consult: print "consult^";
	],
	grammar [;
	    print "grammar ", verb_wordnum, " ", verb_word == 'jump', "^";
	    if(verb_word == 'jump') {
	        action = ##Inv;
	        rtrue;
        }
        rfalse;
    ],
	has animate proper;

Object apple "apple"
	with name 'apple',
	has edible;

[ Initialise;
#IfDef USEINFORM;
    location=INITIAL_LOCATION_VALUE;
#EndIf;
];

